version(1);
project_name = "Advent of Code 2021";
patterns = {
    "*.c",
    "*.cpp",
    "*.h",
    "*.m",
    "*.bat",
    "*.sh",
    "*.4coder",
};
blacklist_patterns = {
    ".*",
};
load_paths_base = {
    { ".", .relative = true, .recursive = true, },
};
load_paths = {
    { load_paths_base, .os = "win", },
    { load_paths_base, .os = "linux", },
    { load_paths_base, .os = "mac", },
};

command_list = {
    { .name = "build",
        .out = "*compilation*", .footer_panel = true, .save_dirty_files = true,
        .cmd = { { "build_vs.bat" , .os = "win"   },
            { "./build.sh", .os = "linux" },
            { "./build.sh", .os = "mac"   }, }, },
    { .name = "run",
        .out = "*run*", .footer_panel = true, .save_dirty_files = false,
        .cmd = { { ".\\aoc.exe", .os = "win"   },
            { "./aoc" , .os = "linux" },
            { "./aoc" , .os = "mac"   }, }, },
};
fkey_command[1] = "build";
fkey_command[2] = "run";
